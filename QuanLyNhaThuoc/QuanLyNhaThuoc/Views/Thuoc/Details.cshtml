        <dt></dt>
        <dd>
            <br />
            <a class="btn btn-info" href="@Url.Action("AddToCart", "GioHang", new{ maThuoc = Model.MaThuoc })"><span class="glyphicon glyphicon-shopping-cart"></span> Thêm Vào Giỏ Hàng</a>
            <a class="btn btn-info" href="@Url.Action("Index","Thuoc")">Trở Lại</a>
        </dd>
    </dl>
</div>
